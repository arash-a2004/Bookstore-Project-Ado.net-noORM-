@using BookStore.web.ViewModels
@model BookwithCategory
<form asp-action="Cart" asp-controller="Home" method="post">
    <div class="row">
        <div class="col-md-6">
            <img src="~/Images/@Model.PictureUri" class="img img-thumbnail"/>
        </div>
        <div class="col-md-6">
            <dl class="row form-group">
                <dt class="col-sm-2">
                    <input type="hidden" asp-for="@Model.BookId"/>
                </dt>               
                <dt class="col-sm-2">
                    <input type="hidden" asp-for="@Model.Name" />
                    <label asp-for="@Model.Name" class="font-weight-bolder"></label>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => Model.Name);
                </dd>
                <dd class="col-sm-2">
                    @Html.DisplayFor(model => Model.Description);
                </dd>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => Model.Description);
                </dd>
                <dt class="col-sm-2">
                    <label asp-for="@Model.ISBNNumber">IsbnNumber : </label>
                </dt>
                <dt class="col-sm-2">
                    <label asp-for="@Model.ISBNNumber">@Model.ISBNNumber </label>
                </dt>
                <dt class="col-sm-2">
                    <input type="hidden" asp-for="@Model.Price" />
                    <label asp-for="@Model.Price" class="font-weight-bolder"></label>
                </dt>
                <dd class="col-sm-10">
                    <i class="fas fa-euro-sign"></i> @Html.DisplayFor(model => Model.Price);
                </dd>

            </dl>
            <div class="row form-group">
                <label asp-for="@Model.Quantity" class="font-weight-bolder">Quantity</label>
                <input asp-for="@Model.Quantity" class="form-control w-100"/>
            </div>
            <div class="row form-group">
                <input type="submit" value="add to card" class="btn btn-primary"/>
            </div>
        </div>
    </div>
</form>
